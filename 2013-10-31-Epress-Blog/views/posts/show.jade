extends ../template/layout

block content
  .row
    .small-12.columns
      h1.subheader Show Page
  .row
    .small-2.columns
      a.button.small.radius(href='/') Home Page
    .small-2.columns
      a.button.small.radius(href='/posts') Posts Page
    .small-2.columns
      a.button.small.radius.success(href='/posts/new') New Page
    .small-6.columns
  .row
    .small-12.columns
      h1= post.title
      h2.subheader= post.author
      img.float(src=post.image)
      p.float= post.content
      .clear
      span.smallText= "|   " + post.date + "   |    "
      span.smallText= " tags:  " + post.tags + " |"
