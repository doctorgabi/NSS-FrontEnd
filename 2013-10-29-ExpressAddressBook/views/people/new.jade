extends ../template/layout
include ../mixins/form-helper

block content
  h1 Address Book
  h2 New Person
  p: a(href= '/people') People Page
  form(action='/people', method='post')
    mixin field('name', 'Full Name', 'bob', true)
    mixin field('gender', 'Gender', 'male', false)
    mixin field('age', 'Age', '31', false)
    mixin field('color', 'Color', '#ff33gg', false)
    button(type='submit') Save Person