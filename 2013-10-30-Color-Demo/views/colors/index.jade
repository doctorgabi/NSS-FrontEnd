extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Colors Page
  .row
    .small-2.columns
      a.button.small.radius.expand(href='/') Home
  .row
    - var width = 100/colors.length
    table#colors
      thead: tr
        each color in colors
          th= color
      tbody: tr
        each color in colors
          td.color(style='background-color:#{color};width:#{width}%;')

//- the colors array was passed in from the var created in the route to here