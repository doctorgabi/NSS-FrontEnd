extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-6.columns.small-offset-3.columns
      .headerWrapper
        h1.subheader New Song Page
  .row
    .small-12.columns
      form#newSong(action='/songs', method='post')
        fieldset
          legend New Song
          .row
            mixin field(3, 'title', 'Title', null, null, true)
            mixin field(2, 'duration', 'Song Duration (s)')
            mixin field(3, 'genres', 'Genres (blues, rock, country)')
            mixin field(2, 'art', 'Song Image')
            mixin field(2, 'filename', 'Filename')
          .row
            .small-12.columns
              label(for='lyrics') Lyrics:
              textarea#lyrics(name='lyrics')
          .row
            .small-2.columns.small-offset-8: a.button.radius.alert.small.expand(href='/songs') Cancel
            .small-2.columns: button.radius.success.small.expand(type='submit') Save Song