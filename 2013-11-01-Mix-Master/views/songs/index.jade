extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Songs Page
  .row
    .small-12.columns
      #songs
        each song in songs
          .song
            h3= song.title
            audio(src="/audios/#{song.filename}", controls=true)
            p= song.duration
            p= song.lyrics
            img(src=song.art)
            ul
              each genre in song.genres
                li= genre
            p= song.createdAt

